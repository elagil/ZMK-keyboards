#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/outputs.h>

#define LOWER 1
#define UPPER 2

/ {
    keymap {
        compatible = "zmk,keymap";

        default_layer {
// ,-----------------------------------,                          ,-----------------------------------,
// |  =  |  1  |  2  |  3  |  4  |  5  |                          |  6  |  7  |  8  |  9  |  0  |  -  |
// |  [  |  Q  |  W  |  E  |  R  |  T  |                          |  Y  |  U  |  I  |  O  |  P  |  ]  |
// | TAB |  A  |  S  |  D  |  F  |  G  |-----,              ,-----|  H  |  J  |  K  |  L  |  ;  |  '  |
// | SFT |  Z  |  X  |  C  |  V  |  B  | ESC |-----,  ,-----|  \  |  N  |  M  |  ,  |  .  |  /  | SFT |
// '-----------------| ALT |LOWER| BSP | CTL | GUI |  | RET |RALT | SPC |UPPER| DEL |-----------------'
//                   '-----------------------------'  '-----------------------------'
            bindings = <
&kp EQUAL   &kp N1      &kp N2      &kp N3      &kp N4      &kp N5                                                      &kp N6      &kp N7      &kp N8      &kp N9      &kp N0      &kp MINUS
&kp LBKT    &kp Q       &kp W       &kp E       &kp R       &kp T                                                       &kp Y       &kp U       &kp I       &kp O       &kp P       &kp RBKT
&kp TAB     &kp A       &kp S       &kp D       &kp F       &kp G                                                       &kp H       &kp J       &kp K       &kp L       &kp SEMI    &kp SQT
&kp LSHFT   &kp Z       &kp X       &kp C       &kp V       &kp B       &gresc                              &kp BSLH    &kp N       &kp M       &kp COMMA   &kp DOT     &kp FSLH    &kp RSHFT
                                    &kp LALT    &mo LOWER   &kp BSPC    &kp LCTL    &kp LGUI    &kp RET     &kp RALT    &kp SPC     &mo UPPER   &kp DEL
            >;
        };

        lower_layer {
// ,-----------------------------------,                          ,-----------------------------------,
// | F12 |  F1 |  F2 |  F3 |  F4 |  F5 |                          |  F6 |  F7 |  F8 |  F9 | F10 | F11 |
// |     |     | BRID| DEL | BRIU|     |                          |     |     |     |     |     |  -  |
// |S-TAB|     | PREV| PLAY| NEXT|     |-----,              ,-----|  ^  |  &  |  *  |  (  |  )  |  _  |
// |  T  |     | VOLD| MUTE| VOLU|     |  ~  |-----,  ,-----|     |     |     |     |     |     |  T  |
// '-----------------|  T  |  T  |  T  |  T  |  T  |  |  T  |  T  |  T  |     |  T  |-----------------'
//                   '-----------------------------'  '-----------------------------'
            bindings = <
&kp F12     &kp F1      &kp F2      &kp F3      &kp F4      &kp F5                                                      &kp F6      &kp F7      &kp F8      &kp F9      &kp F10     &kp F11
&none       &none       &kp C_BRI_DEC &kp DEL   &kp C_BRI_UP &none                                                      &none       &none       &none       &none       &none       &kp MINUS
&kp S(TAB)  &none       &kp C_PREV  &kp C_PP    &kp C_NEXT  &none                                                       &kp CARET   &kp AMPS    &kp STAR    &kp LPAR    &kp RPAR    &kp UNDER
&trans      &none       &kp C_VOL_DN &kp C_MUTE &kp C_VOL_UP &none      &kp TILDE                           &none       &none       &none       &kp LT      &kp GT      &none       &trans
                                    &trans      &trans      &trans      &trans      &trans      &trans      &trans      &trans      &none       &trans
            >;
        };

        upper_layer {
// ,-----------------------------------,                          ,-----------------------------------,
// | F12 |  F1 |  F2 |  F3 |  F4 |  F5 |                          |  F6 |  F7 |  F8 |  F9 | F10 | F11 |
// |  =  |     |     |     |     |     |                          | PGUP| PREV|  UP | NEXT| PRT |     |
// |  +  |  !  |  @  |  #  |  $  |  %  |-----,              ,-----| HOME| LEFT| DOWN|RIGHT| END |     |
// |  T  |     |     |     |     |     |  ~  |-----,  ,-----|     | PGDN| DELP| INS | DELN|PAUSE|  T  |
// '-----------------|  T  |     |  T  |  T  |  T  |  |  T  |  T  |  T  |  T  |  T  |-----------------'
//                   '-----------------------------'  '-----------------------------'
            bindings = <
&kp F12     &kp F1      &kp F2      &kp F3      &kp F4      &kp F5                                                      &kp F6      &kp F7      &kp F8      &kp F9      &kp F10     &kp F11
&kp EQUAL   &none       &none       &none       &none       &none                                                       &kp PG_UP   &kp LC(LEFT) &kp UP     &kp LC(RIGHT) &kp PSCRN &none
&kp PLUS    &kp EXCL    &kp AT      &kp HASH    &kp DOLLAR  &kp PERCENT                                                 &kp HOME    &kp LEFT    &kp DOWN    &kp RIGHT   &kp END     &none
&trans      &none       &none       &none       &none       &none       &kp TILDE                           &none       &kp PG_DN   &kp LC(BSPC) &kp INS    &kp LC(DEL) &kp PAUSE_BREAK &trans
                                    &trans      &none      &trans      &trans      &trans      &trans      &trans      &trans      &trans      &trans
            >;
        };
    };
};
